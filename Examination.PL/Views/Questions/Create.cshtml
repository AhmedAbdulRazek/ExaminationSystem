
@model Examination.BL.ViewModels.CreateQuestionVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mark" class="control-label"></label>
                <input asp-for="Mark" class="form-control" />
                <span asp-validation-for="Mark" class="text-danger"></span>
            </div>
            
            <div class="form-group  mt-2">
                <label asp-for="QuestionTypeId">Question Type</label>
                <select asp-for="QuestionTypeId" class="form-control" asp-items="(SelectList)ViewBag.QuestionTypesList"></select>
            </div>
            <div class="form-group  mt-2">
                <label asp-for="ExamId">Exam Subject</label>
                <select asp-for="ExamId" class="form-control" asp-items="(SelectList)ViewBag.ExamsList"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
                <input type="reset" value="Reset" class="btn btn-danger  mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning mt-2">Back To Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
