@model IEnumerable<Examination.BL.ViewModels.ExamVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Exam</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Id </th>
            <th>Subject</th>
            
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
            
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Subject</td>
                
                
                <td><a class="btn btn-primary" asp-controller="Exams" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td><a class="btn btn-warning" asp-controller="Exams" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Exams" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                
            </tr>
        }
    </tbody>
</table>
